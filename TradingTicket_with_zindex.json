{
  "layouts": [
    {
      "data": {
        "includeFile": [],
        "metadata": {},
        "fileVersion": 4,
        "windows": [
          {
            "type": "window",
            "id": "TradingTicket",
            "title": "Trading Ticket",
            "layout": "absolute",
            "width": 420,
            "height": 300,
            "zindex": 0,
            "children": [
              {
                "type": "textfield",
                "id": "symbol",
                "label": "Symbol",
                "x": 10,
                "y": 10,
                "width": 150,
                "height": 30,
                "required": true,
                "zindex": 1
              },
              {
                "type": "combobox",
                "id": "side",
                "label": "Side",
                "x": 170,
                "y": 10,
                "width": 100,
                "height": 30,
                "required": true,
                "options": [
                  "Buy",
                  "Sell"
                ],
                "zindex": 2
              },
              {
                "type": "numberfield",
                "id": "quantity",
                "label": "Quantity",
                "x": 10,
                "y": 50,
                "width": 150,
                "height": 30,
                "required": true,
                "minValue": 1,
                "zindex": 3
              },
              {
                "type": "numberfield",
                "id": "price",
                "label": "Price",
                "x": 170,
                "y": 50,
                "width": 100,
                "height": 30,
                "required": true,
                "decimalPrecision": 2,
                "zindex": 4
              },
              {
                "type": "combobox",
                "id": "ordertype",
                "label": "Order Type",
                "x": 10,
                "y": 90,
                "width": 150,
                "height": 30,
                "required": true,
                "options": [
                  "Market",
                  "Limit",
                  "Stop"
                ],
                "zindex": 5
              },
              {
                "type": "combobox",
                "id": "tif",
                "label": "Time In Force",
                "x": 170,
                "y": 90,
                "width": 100,
                "height": 30,
                "required": true,
                "options": [
                  "Day",
                  "GTC",
                  "IOC",
                  "FOK"
                ],
                "zindex": 6
              },
              {
                "type": "textarea",
                "id": "notes",
                "label": "Notes",
                "x": 10,
                "y": 130,
                "width": 260,
                "height": 60,
                "zindex": 7
              },
              {
                "type": "button",
                "id": "submit",
                "text": "Submit Order",
                "style": "primary",
                "x": 10,
                "y": 210,
                "width": 120,
                "height": 35,
                "onClick": {
                  "action": "publish",
                  "topic": "Orders.New",
                  "message": {
                    "symbol": "{symbol}",
                    "side": "{side}",
                    "quantity": "{quantity}",
                    "price": "{price}",
                    "ordertype": "{ordertype}",
                    "tif": "{tif}",
                    "notes": "{notes}"
                  }
                },
                "zindex": 8
              },
              {
                "type": "button",
                "id": "reset",
                "text": "Reset",
                "style": "secondary",
                "x": 140,
                "y": 210,
                "width": 100,
                "height": 35,
                "onClick": {
                  "action": "reset"
                },
                "zindex": 9
              }
            ]
          }
        ]
      }
    }
  ]
}